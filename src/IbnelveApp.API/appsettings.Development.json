{
  "ConnectionStrings": {
    "DefaultConnection": "Server=DESKTOP-45C51C5;Database=IbnelveAppDB;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "JwtSettings": {
    "SecretKey": "SuaChaveSecretaSuperSeguraComPeloMenos32Caracteres123456789",
    "Issuer": "IbnelveApp",
    "Audience": "IbnelveApp",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "IbnelveApp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Swagger": {
    "Title": "IbnelveApp API",
    "Version": "v1",
    "Description": "API para gerenciamento de equipamentos com autenticação JWT",
    "ContactName": "IbnelveApp Team",
    "ContactEmail": "contato@ibnelveapp.com"
  },
  "Security": {
    "RequireHttps": false,
    "EnableCors": true,
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "https://localhost:3000",
      "https://localhost:4200"
    ]
  },
  "Features": {
    "EnableSwagger": true,
    "EnableHealthChecks": true,
    "EnableDetailedErrors": true,
    "EnableRequestLogging": true
  },
  "Database": {
    "CommandTimeout": 30,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": true
  },
  "Authentication": {
    "DefaultScheme": "Bearer",
    "RequireConfirmedAccount": false,
    "LockoutTimeSpan": "00:05:00",
    "MaxFailedAccessAttempts": 5,
    "PasswordRequiredLength": 6,
    "PasswordRequireDigit": true,
    "PasswordRequireLowercase": true,
    "PasswordRequireUppercase": true,
    "PasswordRequireNonAlphanumeric": false
  },
  "MultiTenancy": {
    "Enabled": true,
    "DefaultTenantId": 1,
    "TenantIdClaimType": "tenant_id"
  }
}